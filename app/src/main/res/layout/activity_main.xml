<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_sources"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.newsapi.module.sources.view.SourcesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_sources"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- All UI components IDs should have a structure
        @+id/{element_name}_{some_logical_usage}

        For example:
        - edit_text_user_name
